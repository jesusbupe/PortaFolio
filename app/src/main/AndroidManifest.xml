<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jesusBueno.portafolio.app"
    android:versionCode="1"
    android:versionName="0.0.1">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19"
        />
    <uses-configuration
        android:reqTouchScreen="finger"
        />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jesusBueno.portafolio.app.designListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jesusBueno.portafolio.app.designDetailActivity"
            android:label="@string/title_design_detail"
            android:parentActivityName="com.jesusBueno.portafolio.app.designListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jesusBueno.portafolio.app.designListActivity" />
        </activity>
    </application>

</manifest>
